<section id="portfolio" class="portfolio">
  <div class="container">
    <div class="row">
      <div class="col-lg-10 col-lg-offset-1 text-center">
        <!--       This heading will differ based on route add Ruby conditional here  -->   
        <h1>Your Indoor Garden</h1>
        <hr class="small">
        <div class="row">
          <% @user_plants.each do | plant | %>          
            <div class="col-md-4">
  <!-- add class "leftfloat" to the div directly below for divs to float left after deleting. 
  Must also uncomment the ".leftfloat" in application.css
  -->
              <div class="plant-card-listing portfolio-item" data-plant-id="<%= plant.id %>">
                <img class="img-portfolio img-responsive" src="<%= plant.plant_type.image_url %>">
                <h2 class="h4"><%= plant.custom_name %></h2>
                <p>Next watering date: <%= plant.next_water_date %></p>
                <a data-target="#updatePlantModal<%= plant.id %>" data-toggle="modal">Update</a>
              </div>
            </div>


        <div class="modal fade" tabindex="-1" role="dialog" id="updatePlantModal<%=plant.id%>">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Update <%= plant.plant_type.common_name %> "<%= plant.custom_name %>"</h4>
        </div>
        <div class="modal-body">
          <form method="post" action="/plant-update" class="add-plant form-horizontal">
            <div class="form-group">
              <input type="text" name="custom_name" class="form-control" value="<%= plant.custom_name %>">
            </div>
            <div class="form-group">
              <label class="radio-inline"><input type="radio" value="<%= plant.plant_type.low_water_frequency %>" name="custom_watering_frequency">Low Sunlight</label>
              <label class="radio-inline"><input type="radio" value="<%= (plant.plant_type.low_water_frequency + plant.plant_type.high_water_frequency) / 2 %>" name="custom_watering_frequency">Some Sunlight</label>
              <label class="radio-inline"><input type="radio" value="<%= plant.plant_type.high_water_frequency %>" name="custom_watering_frequency">Lots of Sunlight</label>
            </div>
            <div class="form-group">
              <input type="hidden" name="plant_id" class="form-control" value="<%= plant.id %>">
            </div> 
            <div class="modal-footer">
            <button type="submit" class="btn btn-success">Save changes</button>
            </div>
          </form>
        </div>

      </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
  </div><!-- /.modal -->







          <% end %>    
        </div>
      </div>
    </div>
  </div>